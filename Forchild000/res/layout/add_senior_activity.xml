<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dip" >

        <EditText
            android:id="@+id/addsenior_cardid_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/addsenior_cardid_title"
            android:paddingLeft="16dip"
            android:paddingRight="16dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="12dip" />

        <EditText
            android:id="@+id/addsenior_mainchild_phone_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/addsenior_mainchild_phone_title"
            android:paddingLeft="16dip"
            android:paddingRight="16dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="30dip" />

        <com.forchild000.surface.SetupButton
            android:id="@+id/addsenior_sure_btn"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@color/white" />
    </LinearLayout>

</ScrollView>