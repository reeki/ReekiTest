<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/sos_list_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffcccccc"
        android:gravity="center|right" >

        <ImageView
            android:id="@+id/sos_list_remove_btn"
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="#FFFF0000"
            android:scaleType="center"
            android:src="@drawable/pop_up_del" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sos_list_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="3dip" >


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/sos_list_name_text"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingBottom="5dip"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="16dip"
                        android:textStyle="bold" >
                    </TextView>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_weight="1.0" >
                    </View>
                    
                    <TextView
                        android:id="@+id/sos_list_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textSize="12dip" />

                    <TextView
                        android:id="@+id/sos_list_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textSize="12dip" 
                        android:paddingLeft="5dip"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/sos_list_content_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:paddingRight="16dip"
                        android:paddingTop="5dip"
                        android:singleLine="true"
                        android:textColor="@color/gray"
                        android:textSize="12dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>